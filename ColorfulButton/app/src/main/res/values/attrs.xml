<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ColorfulButton">
        <attr name="android:text" />
        <attr name="android:src" />
        <attr name="horizontalPadding" format="dimension" />
        <attr name="verticalPadding" format="dimension" />
        <attr name="indicatorWidth" format="dimension" />
        <attr name="radius" format="float" />
        <attr name="pressedColor" format="color" />
        <attr name="foregroundColor" format="color" />
        <attr name="indicatorColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SplitterView">
        <attr name="splitterColor" format="color" />
        <attr name="splitterWidth" format="dimension" />
        <attr name="splitterHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ImageTextView">
        <attr name="android:text" />
        <attr name="android:src" />
    </declare-styleable>

    <declare-styleable name="BottomNavigationBar">
        <attr name="defaultColor" format="color" />
        <attr name="selectedColor" format="color" />
        <attr name="hoverColor" format="color" />
    </declare-styleable>

    <!--colorful button default attributes-->
    <dimen name="colorful_button_horizontal_padding">15dp</dimen>
    <dimen name="colorful_button_vertical_padding">15dp</dimen>
    <dimen name="colorful_button_indicator_width">10dp</dimen>
    <dimen name="colorful_button_indicator_radius">5dp</dimen>
    <!--colorful button default attributes-->

    <!--splitter view default attributes-->
    <color name="splitter_view_split_color">#ddd</color>
    <dimen name="splitter_view_splitter_width">2dp</dimen>
    <dimen name="splitter_view_splitter_height">40dp</dimen>
    <!--splitter view default attributes-->

</resources>